<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h3 class="text-center"><%= current_course.title %></h3>
  <br />
  <div class="text-center">
    <%= link_to 'Preview as Student...', course_path(current_course), class: 'btn btn-warning' %>
    <%= link_to 'Add a new section...', new_instructor_course_section_path(current_course), class: 'btn btn-primary' %>
  </div>
  <br />
  <br class="clr" />
  <ul>
    <% current_course.sections.each do |section| %>
    <li>
      <%= section.title %>
      <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'pull-right btn btn-primary btn-xs' %>
      <ul>
        <% section.lessons.each do |lesson| %>
        <li>
          <b><%= lesson.title %></b>
          -
          <%= lesson.subtitle %>
        </li>
        <% end %>
      </ul>
      <br class="clr" />
    </li>
    <% end %>
  </ul>
</div>