<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h3 class="text-center"><%= @course.title %></h3>
  <br />
  <div class="text-center">
    <%= link_to 'Preview as Student...', course_path(@course), class: 'btn btn-warning' %>
    <%= link_to 'Add a new section...', new_instructor_course_section_path(@course), class: 'btn btn-primary' %>
  </div>
  <br />
  <br class="clr" />
  <ul>
    <% @course.sections.each do |section| %>
    <li>
      <%= section.title %>
    </li>
    <% end %>
  </ul>
</div>